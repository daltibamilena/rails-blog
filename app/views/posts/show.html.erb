<div class="card">
<p style="color: green"><%= notice %></p>

<%= render @post %>

<div class="card-footer">
  <%= link_to "Edit this post", edit_post_path(@post) %> |
  <%= link_to "Back to posts", posts_path %>

  <%= button_to "Destroy this post", @post, method: :delete, class: "btn btn-danger" %>
</div>
</div>